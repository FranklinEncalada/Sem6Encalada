<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sem6Encalada.Modificar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Datos a modificar "/>
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el Codigo"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el Apellido"/>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la Edad"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>
                <Button Text=" Modificar" x:Name="btnModificar" Clicked="btnModificar_Clicked" Grid.Row="0" Grid.Column="0"/>
                <Button Text="Regresar" x:Name="btnregresar" Clicked="btnregresar_Clicked" Grid.Row="0" Grid.Column="1"/>


            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>